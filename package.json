{
  "name": "buymeacoffee",
  "version": "1.0.0",
  "buildNumber": 1,
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "upver": "node ./scripts/upver.js",
    "connect": "./scripts/connectHost.sh",
    "clean": "cd android && ./gradlew clean && cd ..",
    "move:apk": "mv android/app/build/outputs/apk/release/app-release.apk ~/Desktop/$npm_package_name-$npm_package_version-$npm_package_buildNumber.apk",
    "move:aab": "mv android/app/build/outputs/bundle/release/app-release.aab ~/Desktop/$npm_package_name-$npm_package_version-$npm_package_buildNumber.aab",
    "build:apk": "cd android && ./gradlew assembleRelease && cd .. && yarn move:apk",
    "build:aab": "yarn clean && cd android && ./gradlew bundleRelease && cd .. && yarn move:aab",
    "run:apk": "yarn android --variant=release && yarn move:apk",
    "build:all": "yarn connect && yarn build:aab && yarn run:apk"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.15.11",
    "@react-native-community/netinfo": "^7.1.2",
    "@react-native-masked-view/masked-view": "^0.2.6",
    "@react-navigation/material-bottom-tabs": "^6.0.9",
    "@react-navigation/material-top-tabs": "^6.0.6",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/stack": "^6.0.11",
    "axios": "^0.24.0",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-native-color-picker": "^0.6.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-image-picker": "^4.3.0",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-pager-view": "^5.4.9",
    "react-native-paper": "^4.10.1",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.9.0",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-tab-view": "^3.1.1",
    "react-native-vector-icons": "^9.0.0",
    "react-query": "^3.33.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.35",
    "@types/react-native": "^0.66.5",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "7.14.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "react-native"
  }
}
